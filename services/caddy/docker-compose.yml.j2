services:
  caddy:
    image: caddy:2.10.0
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
      - "443:443/udp"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile
      - "{{ service_config_path }}/data:/data"
      - "{{ service_config_path }}/config:/config"
      - /var/log/caddy:/var/log/caddy
