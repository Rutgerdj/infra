services:
  homepage:
    image: ghcr.io/gethomepage/homepage:v1.0.4
    container_name: homepage
    environment:
      PUID: 1000
      PGID: 1000
      HOMEPAGE_ALLOWED_HOSTS: "homepage.{{docker_stacks.caddy.dockerbox_hostname}}"
    ports:
      - "{{docker_stacks.homepage.port}}:3000"
    volumes:
      - ./config:/app/config
      - ./images:/app/public/images
    restart: unless-stopped
      